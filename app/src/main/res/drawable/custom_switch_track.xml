<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:dither="true"
    android:visible="true">

    <item android:state_checked="true">

        <shape android:shape="rectangle">

            <corners android:radius="100dp"/>

            <solid android:color="@color/bgColorDarkBlue"/>

            <padding
                android:left="3dp"
                android:right="3dp"
                android:top="3dp"
                android:bottom="3dp"/>

        </shape>

    </item>

    <item android:state_checked="false">

        <shape android:shape="rectangle">

            <corners android:radius="100dp"/>

            <solid android:color="@color/bgColorGray"/>

            <padding
                android:left="3dp"
                android:right="3dp"
                android:top="3dp"
                android:bottom="3dp"/>

        </shape>

    </item>

</selector>