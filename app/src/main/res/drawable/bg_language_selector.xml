<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:dither="true"
    android:visible="true">

    <item android:state_checked="true">

        <shape android:shape="rectangle">

            <solid android:color="@color/bgColorDarkBlue"/>

            <padding
                android:left="10dp"
                android:right="5dp"/>

        </shape>

    </item>

    <item android:state_checked="false">

        <shape android:shape="rectangle">

            <stroke
                android:color="@color/bgColorDarkBlue"
                android:width="2dp"/>

            <padding
                android:left="10dp"
                android:right="5dp"/>

        </shape>

    </item>

</selector>